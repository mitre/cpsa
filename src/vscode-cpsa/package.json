{
    "name": "vscode-cpsa",
    "displayName": "vscode-cpsa",
    "description": "CPSA support for VSCode",
    "repository": "https://github.com/mitre/cpsa",
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.54.3"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:cpsa",
        "workspaceContains:cpsa4.mk",
        "onCommand:vscode-cpsa.execCPSA4CurrentFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cpsa",
                "aliases": ["CPSA"],
                "extensions": [".scm", ".lsp", ".cpsa"],
                "configuration": "./cpsa.language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "vscode-cpsa.execCPSA4CurrentFile",
                "title": "Run CPSA4 on the current file"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "vscode-cpsa.execCPSA4CurrentFile",
                    "when": "resourceLangId == cpsa"
                }
            ]
        },
        "grammars": [
            {
                "language": "cpsa",
                "scopeName": "source.cpsa",
                "path": "./syntaxes/cpsa.tmLanguage"
            }
        ],
        "problemMatchers": [
            {
                "name": "cpsa4",
                "owner": "cpsa",
                "fileLocation": ["autoDetect", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.54.3",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4",
        "@vscode/test-electron": "^2.0.3"
    }
}
